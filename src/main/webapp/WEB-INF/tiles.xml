<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- Template Project that most pages inherit -->
	<definition name="template_project" template="/WEB-INF/templates/template_project.jsp">
		<put-attribute name="content-title" value="### content-title ###" />
		<put-attribute name="header-body" value="/WEB-INF/templates/header.jsp" />
		<put-attribute name="container-body" value="### content-body ###" />
		<put-attribute name="footer-body" value="/WEB-INF/templates/footer.jsp" />
	</definition>
	

	<!-- Home -->
	<definition name="home" extends="template_project">
		<put-attribute name="content-title"	value="Home Title" />
		<put-attribute name="container-body" value="/WEB-INF/views/home.jsp" />
	</definition>


</tiles-definitions>